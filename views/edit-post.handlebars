<section class="m-5">
  <a href="/dashboard" class="is-pulled-right"> &larr; back to dashboard</a>
  <h2 class="title mt-5">edit post</h2><hr>
  <form class="edit-post-form">
    <div>
        <label for="post-title">post title:</label>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
        <label for="post-body">post content:</label>
      <input class="textarea" name="post-body" type="text" value="{{post.post_body}}" />
    </div>
    <div class="is-pulled-right">
       created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success mt-2">save post</button>
    <button type="button" class="button is-danger delete-post-btn mt-2">delete post</button>
  </form>
</section>

{{> comments post.comments}}

<script src="/public/javascript/edit-post.js"></script>
<script src="/public/javascript/delete-post.js"></script>
<script src="/public/javascript/comment.js"></script>