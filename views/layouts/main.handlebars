<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>All About Tech Blogs</title>
  </head>

  <body class="has-navbar">
    <nav class="navbar is-link" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <h1 class="navbar-start has-text-weight-bold is-size-2 ml-3">All About Tech Blogs</h1>
      </div>

      <div class="navbar-end mr-4">
        <a href="/" class="navbar-item">Homepage</a>
        {{#if loggedIn}}
        <a href="/dashboard" class="navbar-item">Dashboard</a>
        <a href="/dashboard/create" class="navbar-item">Create Post</a>
        <div class="buttons">
          <a id="logOut" class="button is-danger">Log Out</a>
          </div>
          {{else}}
          <div class="buttons">
          <a href="/login" class="button is-link is-light">Log In</a>
          </div>
          {{/if}}
        </div>
      </div>
    </nav>

    <section class="mt-3">
      {{{body}}}
    </section>

    {{#if loggedIn}}
      <script src="/javascript/logout.js"></script>
    {{/if}}
  </body>

</html>